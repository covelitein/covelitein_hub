generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model artisan {
  id                Int         @id @default(autoincrement())
  userId            Int         @unique(map: "Artisan_userId_key")
  category          String
  yearsOfExperience String
  paymentPreference String?
  user              user        @relation(fields: [userId], references: [id], map: "Artisan_userId_fkey")
  portfolio         portfolio[]
}

model portfolio {
  id        Int     @id @default(autoincrement())
  image     String
  artisanId Int
  artisan   artisan @relation(fields: [artisanId], references: [id], map: "Portfolio_artisanId_fkey")

  @@index([artisanId], map: "Portfolio_artisanId_fkey")
}

model service {
  id        Int    @id @default(autoincrement())
  artisanId Int    @unique(map: "Service_artisanId_key")
  service   String
  user      user   @relation(fields: [artisanId], references: [id], map: "Service_artisanId_fkey")
}

model user {
  id        Int      @id @default(autoincrement())
  firstname String
  lastname  String
  email     String   @unique(map: "User_email_key")
  phone     String
  gender    String
  username  String
  password  String
  image     String?
  address   String?
  city      String?
  state     String?
  zipCode   String?
  artisan   artisan?
  service   service?
  role      role     @default(user)
}

enum role {
  user
  artisan
  admin
}
